#! /usr/bin/env frecklecute

doc:
  help: backup wordpress instance

tasks:
  - MYSQL_DB:
      state: dump
      name: all
      target: /var/lib/freckles/wordpress-dev_post/mysql/mysql_dump.sql

  - ARCHIVE:
      path: /var/lib/freckles/wordpress-dev_post
      dest: /var/lib/freckles/wordpress_backup.tar.bz2
      format: bz2
