#! /usr/bin/env frecklecute

doc:
  help: imports a wordpress database backup

args:
  db_dump_path:
    arg_name: db_dump_path
    required: true
    nargs: 1
    is_argument: true
    is_var: false

tasks:
  - meta:
      name: stat
      register: db_dump
    vars:
      path: "{{:: db_dump_path ::}}"
  - meta:
      name: fail
      when: "not db_dump.stat.exists"
    vars:
      msg: "{{:: db_dump_path ::}} does not exist"
  - meta:
      name: mysql_db
      task-desc: "importing mysql db dump"
      become: true
    vars:
      state: import
      name: all
      target: "{{:: db_dump_path ::}}"
